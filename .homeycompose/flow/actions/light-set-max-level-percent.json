{
  "title": {
    "en": "Set light max level (percent)",
    "ko": "조명 최대 밝기 설정 (%)"
  },
  "titleFormatted": {
    "en": "Set light [[address]] max level to [[percent]]% on bus [[bus]]",
    "ko": "버스 [[bus]]의 조명 [[address]] 최대 밝기를 [[percent]]%로 설정"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=dali-controller"
    },
    {
      "type": "range",
      "name": "bus",
      "title": {
        "en": "Bus",
        "ko": "버스"
      },
      "min": 0,
      "max": 3,
      "step": 1,
      "labelDecimals": 0,
      "placeholder": {
        "en": "Bus (0-3)",
        "ko": "버스 (0-3)"
      }
    },
    {
      "type": "range",
      "name": "address",
      "title": {
        "en": "Address",
        "ko": "주소"
      },
      "min": 0,
      "max": 63,
      "step": 1,
      "labelDecimals": 0,
      "placeholder": {
        "en": "Address (0-63)",
        "ko": "주소 (0-63)"
      }
    },
    {
      "type": "range",
      "name": "percent",
      "title": {
        "en": "Max Percent",
        "ko": "최대 밝기 (%)"
      },
      "min": 0,
      "max": 100,
      "step": 1,
      "labelDecimals": 0,
      "placeholder": {
        "en": "Percent (0-100)",
        "ko": "퍼센트 (0-100)"
      }
    }
  ]
}
