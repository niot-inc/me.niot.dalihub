{
  "title": {
    "en": "Set group max level (percent)",
    "ko": "그룹 최대 밝기 설정 (%)"
  },
  "titleFormatted": {
    "en": "Set group [[group]] max level to [[percent]]% on bus [[bus]]",
    "ko": "버스 [[bus]]의 그룹 [[group]] 최대 밝기를 [[percent]]%로 설정"
  },
  "args": [
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=dali-controller"
    },
    {
      "type": "range",
      "name": "bus",
      "title": {
        "en": "Bus",
        "ko": "버스"
      },
      "min": 0,
      "max": 3,
      "step": 1,
      "labelDecimals": 0,
      "placeholder": {
        "en": "Bus (0-3)",
        "ko": "버스 (0-3)"
      }
    },
    {
      "type": "range",
      "name": "group",
      "title": {
        "en": "Group",
        "ko": "그룹"
      },
      "min": 0,
      "max": 15,
      "step": 1,
      "labelDecimals": 0,
      "placeholder": {
        "en": "Group (0-15)",
        "ko": "그룹 (0-15)"
      }
    },
    {
      "type": "range",
      "name": "percent",
      "title": {
        "en": "Max Percent",
        "ko": "최대 밝기 (%)"
      },
      "min": 0,
      "max": 100,
      "step": 1,
      "labelDecimals": 0,
      "placeholder": {
        "en": "Percent (0-100)",
        "ko": "퍼센트 (0-100)"
      }
    }
  ]
}
